<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.express.activity.NicknameActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height">
        <ImageView
            android:id="@+id/iv_nickname_back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/black_back"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView
            android:textSize="16sp"
            android:textColor="@color/share_text"
            android:text="昵称"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_nickname_complete"
            android:textSize="15sp"
            android:text="完成"
            android:textColor="@color/share_text"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:background="@color/part_linear_color"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <EditText
        android:id="@+id/et_new_nickname"
        android:background="#77eaeaea"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:layout_width="330dp"
        android:layout_height="40dp" />

</LinearLayout>
