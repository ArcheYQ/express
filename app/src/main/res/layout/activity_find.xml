<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.express.activity.FindActivity">
    <android.support.v7.widget.Toolbar
        android:elevation="5dp"
        android:background="@color/white"
        android:id="@+id/tb_find"
        android:layout_width="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_height="45dp">
        <TextView
            android:textColor="@color/share_text"
            android:textSize="15sp"
            android:text="搜索用户"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <EditText
            android:hint="请输入学号"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="50dp"
            android:id="@+id/et_find"
            android:background="@drawable/findborder"
            android:layout_width="match_parent"
            android:layout_height="30dp" />
        <ImageView
            android:layout_marginTop="4dp"
            android:id="@+id/iv_find"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/find"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_info"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginTop="4dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/cc_find_tou"

            android:layout_alignParentStart="true"
            android:layout_marginStart="11dp" />
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_toRightOf="@id/cc_find_tou"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:id="@+id/tv_find_nickname" />
        <TextView
            android:id="@+id/tv_find_student"
            android:layout_marginTop="27dp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_toRightOf="@id/cc_find_tou"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            />
    </RelativeLayout>

</LinearLayout>
