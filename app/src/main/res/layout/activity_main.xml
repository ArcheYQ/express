<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.express.activity.MainActivity">
            <com.express.view.SlidingMenu
                android:id="@+id/id_menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                rightPadding="300dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <include layout="@layout/left_menu"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white">
                        <com.scwang.smartrefresh.layout.SmartRefreshLayout
                            android:id="@+id/srl_main"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/rv_main"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </com.scwang.smartrefresh.layout.SmartRefreshLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="70dp">
                            <ImageView
                                android:id="@+id/iv_PersonInformation"
                                android:layout_marginLeft="10dp"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/pinformation"
                                android:layout_centerVertical="true"/>
                            <ImageView
                                android:src="@drawable/sms"
                                android:id="@+id/iv_sms"
                                android:layout_centerVertical="true"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="10dp"/>
                        </RelativeLayout>
                        <View
                            android:background="#636363"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <android.support.design.widget.FloatingActionButton
                            android:id="@+id/fb_publish"
                            android:layout_alignParentRight="true"
                            android:layout_marginBottom="35dp"
                            android:layout_marginRight="10dp"
                            android:layout_alignParentBottom="true"
                            android:src="@drawable/add"
                            app:fabSize="auto"
                            android:layout_width="wrap_content"
                            app:backgroundTint="@color/white"
                            android:layout_height="wrap_content" />
                        <RelativeLayout
                            android:layout_alignParentBottom="true"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:background="#98f7f7f7">
                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/refresh"
                                />
                        </RelativeLayout>

                    </RelativeLayout>
                </LinearLayout>
            </com.express.view.SlidingMenu>


</RelativeLayout>
