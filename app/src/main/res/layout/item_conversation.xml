<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="66dp"
    android:clickable="true"
    android:background="@drawable/item_message_selector">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cc_con_tou"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/pig"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"/>
    <RelativeLayout
        android:layout_marginLeft="8dp"
        android:layout_width="match_parent"
        android:layout_height="66dp">
        <TextView
            android:id="@+id/tv_con_name"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小仙女"
            android:textColor="@color/black"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/tv_con_time"
            android:text="08-02"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_con_sms"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小仙女在吗？"/>
        <TextView
            android:textSize="12sp"
            android:id="@+id/tv_con_num"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/message"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"/>
        <View
            android:background="@color/going_unfinsh_color"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>
</LinearLayout>